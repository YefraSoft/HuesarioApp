<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HuesarioApp.ViewModels.Auth"
             xmlns:models="clr-namespace:HuesarioApp.Models.Entities"
             x:DataType="vm:LoginViewModel"
             x:Class="HuesarioApp.Views.Auth.LoginView">
    <VerticalStackLayout Padding="30" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">

        <Label Text="Seleccionar sesión"
               FontSize="Medium"
               HorizontalOptions="Center" />
        <CollectionView ItemsSource="{Binding SessionsList}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedSession}"
                        FlowDirection="LeftToRight"
                        ItemsLayout="HorizontalList">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Sessions">
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="5">
                        <Border StrokeThickness="2"
                                Stroke="Black"
                                StrokeShape="Ellipse"
                                Padding="5"
                                Margin="5"
                                BackgroundColor="Orange"
                                HorizontalOptions="Center"
                                VerticalOptions="Center">
                            <Image Source="{Binding Image}"
                                   WidthRequest="60"
                                   HeightRequest="60"
                                   Aspect="AspectFill">
                                <Image.Clip>
                                    <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30" />
                                </Image.Clip>
                            </Image>
                        </Border>
                        <Label Text="{Binding Name}"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="Usuario" FontSize="Medium" HorizontalOptions="Center" />
        <Entry Text="{Binding Username}" Placeholder="Ingrese usuario" FontSize="Small"
               HorizontalOptions="FillAndExpand" />

        <Label Text="Contraseña" FontSize="Medium" HorizontalOptions="Center" />
        <Entry Text="{Binding Password}" Placeholder="Ingrese contraseña" IsPassword="True" FontSize="Small"
               HorizontalOptions="FillAndExpand" />

        <Grid HorizontalOptions="FillAndExpand">
            <Button Text="Iniciar Sesión"
                    TextColor="White"
                    FontSize="Small"
                    BackgroundColor="Orange"
                    Command="{Binding LoggingCommand}"
                    HorizontalOptions="FillAndExpand">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal"/>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="0.95" />
                                    <Setter Property="Opacity" Value="0.8" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="1.05" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </VisualStateManager.VisualStateGroups>
            </Button>
            <Border BackgroundColor="Orange"
                    StrokeThickness="0"
                    Padding="10"
                    IsVisible="{Binding IsBusy}"
                    HorizontalOptions="FillAndExpand">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <ActivityIndicator IsRunning="True"
                                       Color="White"
                                       HeightRequest="20"
                                       WidthRequest="20" />
                    <Label Text="Iniciando sesión..."
                           TextColor="White"
                           VerticalOptions="Center"
                           FontSize="Small" />
                </HorizontalStackLayout>
            </Border>
        </Grid>
    </VerticalStackLayout>
</ContentPage>