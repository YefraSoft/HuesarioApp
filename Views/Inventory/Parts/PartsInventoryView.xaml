<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HuesarioApp.Views.Inventory.Parts.PartsInventoryView">
    <ScrollView Padding="10">
        <StackLayout>


            <Border BackgroundColor="Azure" >
                <StackLayout>
                    <Label Text="Nueva pieza" />
                    <Entry Placeholder="Nombre de la pieza"
                           Text="{Binding Part.Name}" />
                    <Picker Title="Seleccionar Modelo"
                            ItemsSource="{Binding ModelsList}"
                            SelectedItem="{Binding SelectedModel}"
                            ItemDisplayBinding="{Binding Name}" />
                    <Picker Title="Categoría"
                            ItemsSource="{Binding PartCategories}"
                            SelectedItem="{Binding SelectedCategory}" />
                    <Picker Title="Lado"
                            ItemsSource="{Binding Sides}"
                            SelectedItem="{Binding SelectedSide}" />
                    <Entry Placeholder="Stock"
                           Text="{Binding Part.Stock}"
                           Keyboard="Numeric" />
                    <Entry Placeholder="Precio"
                           Text="{Binding Part.Price}"
                           Keyboard="Numeric" />
                    <Button Text="Guardar Pieza"
                            Command="{Binding SaveCommand}"
                            BackgroundColor="Orange"
                            CornerRadius="5" />
                </StackLayout>
            </Border>
            <Border BackgroundColor="Azure" StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <StackLayout Spacing="10">
                    <Label Text="Piezas Registradas" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" />

                    <CollectionView ItemsSource="{Binding PartsList}" HeightRequest="400">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10" BackgroundColor="LightBlue" Margin="0,2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Información de la Pieza -->
                                    <StackLayout Grid.Row="0" Grid.Column="0">
                                        <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" />
                                        <Label Text="{Binding PartCategory}" FontSize="12" TextColor="Gray" />
                                    </StackLayout>

                                    <!-- Botón Eliminar -->
                                    <Button Grid.Row="0" Grid.Column="1"
                                            Text="🗑️"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="Red"
                                            TextColor="White"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            CornerRadius="20" />

                                    <!-- Detalles -->
                                    <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                        <Label Text="{Binding Side, StringFormat='Lado: {0}'}" FontSize="12" />
                                        <Label Text="{Binding Stock, StringFormat='Stock: {0}'}" FontSize="12" />
                                        <Label Text="{Binding Price, StringFormat='Precio: ${0:F2}'}" FontSize="12"
                                               FontAttributes="Bold" />
                                    </StackLayout>

                                    <!-- Modelo ID -->
                                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding ModelId, StringFormat='Modelo ID: {0}'}"
                                           FontSize="10"
                                           TextColor="DarkGray" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>